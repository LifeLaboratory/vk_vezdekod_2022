<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet id="1" author="Boris Bochkarev">
        <createTable tableName="question">
            <column autoIncrement="true" name="id"  type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="question"  type="VARCHAR(255)"/>
            <column name="category_id"  type="BIGINT"/>
            <column name="difficulty"  type="NUMBER"/>
            <column name="answer"  type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="category">
            <column autoIncrement="true" name="id"  type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name"  type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="game">
            <column autoIncrement="true" name="id"  type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="count_questions"  type="NUMBER"/>
            <column name="min_difficulty"  type="NUMBER"/>
            <column name="max_difficulty"  type="NUMBER"/>
            <column name="questions_id"  type="TEXT"/>
        </createTable>
        <loadData tableName="category" file="db/changelog/category.csv" separator="," />
        <loadData tableName="question" file="db/changelog/question.csv" separator="," />
    </changeSet>
</databaseChangeLog>
